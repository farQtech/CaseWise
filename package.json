{
  "name": "case-wise-monorepo",
  "version": "1.0.0",
  "description": "Health App Monorepo with Backend, Worker, and Frontend",
  "private": true,
  "workspaces": [
    "backend",
    "worker",
    "frontend"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:worker": "turbo run dev --filter=worker",
    "dev:frontend": "turbo run dev --filter=frontend",
    "start": "turbo run start",
    "start:railway": "npm run start:backend & sleep 10 && npm run start:worker & sleep 5 && npm run start:frontend",
    "start:backend": "turbo run start --filter=backend",
    "start:worker": "turbo run start --filter=worker",
    "start:frontend": "turbo run start --filter=frontend",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:worker\" \"npm run start:frontend\"",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "turbo run format",
    "type-check": "turbo run type-check",
    "turbo": "turbo",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans"
  },
  "devDependencies": {
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@8.0.0"
}
